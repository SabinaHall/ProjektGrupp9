@using Microsoft.AspNet.Identity
@model IEnumerable<DataLogic.Models.ApplicationUser>

@{
    ViewBag.Title = "Användarsök";
}

<h2>Användare (sökresultat)</h2>


<p>
    @using (Html.BeginForm("UserSearch", "Home"))
    {
        @Html.TextBox("UserSearch", null, new { @class = "form-control" })

        <input type="submit" name="userSearch" value="Sök användare" />
    }
</p>

<div style="max-height:750px; overflow-y:scroll;">
    <hr />
    @foreach (var user in Model)
    {
        <div class="card front-cards" style="width: 20rem;">
            <img class="card-img-top image-size" src="@Url.Action("ProfilePicture", "Account", new { id = user.Id} )" alt="Card image cap">
            <div class="card-block">
                <h4 class="card-title">@Html.ActionLink(user.UserName, "Details", "Account", new { id = user.Id }, null)</h4>

            </div>
        </div>
    }
</div>

