@model DataLogic.Models.ApplicationUser

@{
    ViewBag.Title = "EditProfile";
}

<h2>Ändra Profil</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Användare</h4>
