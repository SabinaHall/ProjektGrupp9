@using Microsoft.AspNet.Identity
@model DataLogic.Models.ApplicationUser


<h2>Aktivera användare</h2>

<h3>Är du säkert att du vill aktivera denna användare?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
    </dl>

    @using (Html.BeginForm("ActivateConfirmed", "Home", new { Model.Id }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Aktivera" class="btn btn-default" />
        </div>
    }
</div>
