@using System.Collections.Generic
@using Microsoft.AspNet.Identity
@model DataLogic.Models.EntryEducation

<h2>Skapa ett nytt utbildningsinlägg</h2>

@using (Html.BeginForm("CreateEducation", "EntryInformative", new { Id = User.Identity.GetUserId() }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Heading, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        @using (DataLogic.Models.ApplicationDbContext db = new DataLogic.Models.ApplicationDbContext())
        {
            foreach (var aCategory in db.Categories)
            {
                <h2>VILL HA DETTA SOM DROPDOWNLIST</h2>
                @*@Html.DropDownList("Kategori", aCategory.Namn)*@
                <p>@aCategory.Namn</p>
            }
        }

        <br />
        <h3>HÄR SKA MAN VÄLJA KATEGORI</h3>
        <div class="col-md-10">
            <p>Vill du lägga till en egen kategori?</p>
            @Html.ActionLink("Klicka här", "CreateEducation", "Categories", routeValues: new { Id = User.Identity.GetUserId() }, htmlAttributes: new { @class = "btn btn-default" })
        </div>

        <br />
        <br />
        <br />
        <br />

        <div class="form-group">
            <p>Ladda upp en bild med inlägget.</p>
            <div class="col-md-10">
                @*Tillåter bara en specifik ändelse så att man vet att det är en bild som laddas in*@
                <input type="file" name="picUpload" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skapa" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="clearfix"></div>
