@using Microsoft.AspNet.Identity
@model IEnumerable<DataLogic.Models.Entries>

@{
    ViewBag.Title = "Index";
}

<h2>Formella inlägg</h2>

<p>
    @Html.ActionLink("Skriv nytt inlägg", "Create", new { Id = User.Identity.GetUserId() }, htmlAttributes: new { @class = "btn btn-default" })
</p>

@foreach(var entry in Model)
{
    <div class="well">
        <h3>@entry.Heading</h3>
        <p>Skriven av: @entry.Author.Email</p>
        <p>Datum: @entry.Date.ToString()</p>
        <br />
        <br />
        <p>@entry.text</p>
    </div>
}


<div class="clearfix"></div>
